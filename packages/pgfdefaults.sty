% PGF settings %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\pgfplotsset{
    compat=newest,
    tick scale binop=\times,
}
%\usepgfplotslibrary{external}
%\tikzexternalize[prefix=Figures/Cache/]

\pgfplotsset{
    every mark/.append style = {
        none,
    },
    %
    every axis plot/.append style = {
        line width = 1pt,
    },
    %
    every axis/.append style = {
        grid = major,
        major grid style = {dotted},
%        legend pos = north west
    },
    every axis legend/.append style = {
        font = \footnotesize
    },
    yticklabel style = {
        text width = 2em,
        align = right,
        font = \footnotesize,
        xshift = 0.5ex,
    },
    %
    xticklabel style = {
        font = \footnotesize,
%        yshift = 0.5ex,
    },
%    every x tick label/.append style = {
%        font = \footnotesize,
%        yshift = 0.5ex
%    }
    %
    every axis label/.append style = {
        font = \footnotesize
    },
}
 
